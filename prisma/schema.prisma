// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(cuid())
  email     String     @unique
  name      String?
  password  String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  
  // Relations
  projects  Project[]
  prompts   Prompt[]
  executions Execution[]
}

model Project {
  id          String     @id @default(cuid())
  name        String
  description String?
  userId      String
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  
  // Relations
  user        User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  prompts     Prompt[]
  executions  Execution[]
  
  @@index([userId])
}

model Prompt {
  id          String     @id @default(cuid())
  title       String
  description String?
  content     String
  version     Int        @default(1)
  userId      String
  projectId   String
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  
  // Relations
  user        User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  project     Project    @relation(fields: [projectId], references: [id], onDelete: Cascade)
  executions  Execution[]
  
  @@index([userId])
  @@index([projectId])
}

model Execution {
  id          String     @id @default(cuid())
  status      ExecutionStatus @default(PENDING)
  input       Json?
  output      Json?
  error       String?
  duration    Int?       // in milliseconds
  userId      String
  projectId   String
  promptId    String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  
  // Relations
  user        User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  project     Project    @relation(fields: [projectId], references: [id], onDelete: Cascade)
  prompt      Prompt?    @relation(fields: [promptId], references: [id], onDelete: SetNull)
  
  @@index([userId])
  @@index([projectId])
  @@index([promptId])
  @@index([status])
  @@index([createdAt])
}

enum ExecutionStatus {
  PENDING
  RUNNING
  SUCCESS
  FAILED
  CANCELLED
}
